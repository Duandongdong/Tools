<?xml version="1.0" encoding="utf-8"?>
<com.bestgood.commons.ui.widget.ImageSlidingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/imageSlidingView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v4.view.ViewPager
        android:id="@id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <com.bestgood.commons.ui.pager.CirclePageIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        app:fillColor="@color/white"
        app:pageColor="#FF666666"
        app:radius="3dp"
        app:strokeColor="#FF666666"
        app:strokeWidth="0dp" />
</com.bestgood.commons.ui.widget.ImageSlidingView>


