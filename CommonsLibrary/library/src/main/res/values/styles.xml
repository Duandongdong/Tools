<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_activity</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <!-- ActionBar -->
        <!-- ActionBarSherlock works on Android 2.x-3.x only, on 4.x a native action bar is used. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionModeBackground">@drawable/bg_action_bar</item>
        <item name="android:actionModeCloseButtonStyle">@style/NoCloseButton</item>

        <!-- <item name="actionButtonStyle">@style/CenterActionButton</item>
        <item name="android:actionButtonStyle">@style/CenterActionButton</item> -->
        <!-- ActionBar -->
    </style>

    <style name="ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/bg_action_bar</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/bg_popup_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="DialogStyleSharedChoice">

        <!-- <item name="android:windowFullscreen">true</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationShare</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <style name="DialogStyleShared" parent="@android:style/Theme.Dialog">

        <!-- <item name="android:windowFullscreen">true</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationBottomEnter</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <style name="DialogStyleInputMain" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogStyleInputMainAnimation</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <style name="DialogStyleInputMainAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_main_search_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_main_search_exit</item>
    </style>

    <style name="DialogStylePoiSearch" parent="DialogStyleShared">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:windowAnimationStyle">@style/DialogAnimatioTopEnter</item> -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>
    </style>

    <style name="DialogAnimationShare">
        <item name="android:windowEnterAnimation">@anim/dialog_share_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_share_exit</item>
    </style>

    <style name="DialogAnimationBottomEnter">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>

    <style name="DialogAnimatioTopEnter">
        <item name="android:windowEnterAnimation">@anim/dialog_top_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_top_exit</item>
    </style>

    <style name="NoCloseButton" parent="android:Widget.Holo.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>


    <style name="ViuolationDateChooseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <declare-styleable name="LinearListView">
        <attr name="android:entries" />
        <attr name="dividerThickness" format="dimension" />
    </declare-styleable>

    <style name="Animation_dropdown" mce_bogus="1" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="KeyTextAppearanceNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="KeyTextAppearanceMatched">
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextStylePopupDialog">
        <item name="android:textColor">@color/text_color_popup_dialog</item>
        <item name="android:textSize">@dimen/text_size_popup_dialog</item>
    </style>

    <!-- Text style -->
    <style name="ProgressBarStyle">
        <item name="android:layout_width">@dimen/progressbar_size</item>
        <item name="android:layout_height">@dimen/progressbar_size</item>
        <item name="android:interpolator">@android:anim/linear_interpolator</item>
    </style>

    <style name="TextStylePopupDialogButton">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_popup_dialog</item>
    </style>

    <style name="TextStyleMaxOrange">

        <item name="android:textSize">@dimen/text_size_max</item>

    </style>


    <style name="TextStyleMidOrange">
        <item name="android:textColor">@color/text_color_orange</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="TextStyleSmallOrange">
        <item name="android:textColor">@color/text_color_orange</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleMidDarkGray">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="TextStyleLargDarkGray">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextStyleMidDarkGrayBold">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleMidLightGray">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="TextStyleMidLightGrayBold">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleSmallDarkGray">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextStyleSmallLightGray">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextStyleEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_color_light_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="TextStyleActionbar">
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <!-- Text style -->
    <style name="DialogFadeInOutStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>

    <style name="ActionBarTextStyleTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!-- 蓝色按钮样式 -->
    <style name="ButtonStyleBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/blue_btn_height</item>
    </style>

    <style name="ActionBarTextStyleMidWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>