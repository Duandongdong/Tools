<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- com.besttone.carmanager.widget.linearlistview.LinearListView -->
    <declare-styleable name="LinearListView">
        <attr name="android:entries" />
        <attr name="dividerThickness" format="dimension" />
    </declare-styleable>

    <style name="Animation_dropdown" mce_bogus="1" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="KeyTextAppearanceNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="KeyTextAppearanceMatched">
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextStylePopupDialog">
        <item name="android:textColor">@color/text_color_popup_dialog</item>
        <item name="android:textSize">@dimen/text_size_popup_dialog</item>
    </style>

    <!-- Text style -->
    <style name="ProgressBarStyle">
        <item name="android:layout_width">@dimen/progressbar_size</item>
        <item name="android:layout_height">@dimen/progressbar_size</item>
        <item name="android:interpolator">@android:anim/linear_interpolator</item>
    </style>

    <style name="TextStylePopupDialogButton">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_popup_dialog</item>
    </style>

    <style name="TextStyleMaxOrange">

        <item name="android:textSize">@dimen/text_size_max</item>

    </style>


    <style name="TextStyleMidOrange">
        <item name="android:textColor">@color/text_color_orange</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="TextStyleSmallOrange">
        <item name="android:textColor">@color/text_color_orange</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleMidDarkGray">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="TextStyleLargDarkGray">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextStyleMidDarkGrayBold">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleMidLightGray">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="TextStyleMidLightGrayBold">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleSmallDarkGray">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextStyleSmallLightGray">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextStyleEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_color_light_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="TextStyleActionbar">
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <!-- Text style -->
    <style name="DialogFadeInOutStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>

    <style name="ActionBarTextStyleTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ActionBarTextStyleMidWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>