<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AnimationFade">

        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/inputtodown</item>
        <item name="android:windowExitAnimation">@anim/outdowntoup</item>
    </style>

    <style name="ResultButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ShareButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/bg_hot_line</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/bg_popup_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <!-- ActionBar -->
        <!-- ActionBarSherlock works on Android 2.x-3.x only, on 4.x a native action bar is used. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionModeBackground">@drawable/bg_action_bar</item>
        <item name="android:actionModeCloseButtonStyle">@style/NoCloseButton</item>

        <!-- <item name="actionButtonStyle">@style/CenterActionButton</item>
        <item name="android:actionButtonStyle">@style/CenterActionButton</item> -->
        <!-- ActionBar -->
    </style>

    <style name="ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/bg_action_bar</item>
    </style>

    <style name="DialogStyleSharedChoice">

        <!-- <item name="android:windowFullscreen">true</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationShare</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <style name="DialogStyleShared" parent="@android:style/Theme.Dialog">

        <!-- <item name="android:windowFullscreen">true</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationBottomEnter</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <style name="DialogStyleInputMain" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogStyleInputMainAnimation</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <style name="DialogStyleInputMainAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_main_search_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_main_search_exit</item>
    </style>

    <style name="DialogStylePoiSearch" parent="DialogStyleShared">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:windowAnimationStyle">@style/DialogAnimatioTopEnter</item> -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>
    </style>

    <style name="DialogAnimationShare">
        <item name="android:windowEnterAnimation">@anim/dialog_share_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_share_exit</item>
    </style>

    <style name="DialogAnimationBottomEnter">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>

    <style name="DialogAnimatioTopEnter">
        <item name="android:windowEnterAnimation">@anim/dialog_top_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_top_exit</item>
    </style>

    <style name="NoCloseButton" parent="android:Widget.Holo.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>


    <style name="ViuolationDateChooseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>





</resources>